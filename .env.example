# NIDS Environment Configuration
# Copy this file to .env in the project root and modify as needed

# Data paths
NIDS_DATA_PATH=dataset/CIDDS-001-external-week3_1.csv
NIDS_MODEL_PATH=models/
NIDS_CONFIG_PATH=config/
NIDS_LOG_PATH=logs/

# API Configuration
NIDS_API_HOST=0.0.0.0
NIDS_API_PORT=8000
NIDS_API_WORKERS=4
NIDS_API_KEY=your-secret-api-key-here

# Model Configuration
NIDS_MODEL_TYPE=autoencoder
NIDS_THRESHOLD_METHOD=percentile

# Logging Configuration
NIDS_LOG_LEVEL=INFO
NIDS_LOG_FORMAT=json

# Database Configuration (for future use)
# NIDS_DATABASE_URL=postgresql://user:password@localhost/nids
# NIDS_REDIS_URL=redis://localhost:6379/0

# Training Configuration
NIDS_BATCH_SIZE=32
NIDS_LEARNING_RATE=0.001
NIDS_EPOCHS=100

# Performance Configuration
NIDS_THRESHOLD_PERCENTILE=95.0
NIDS_VALIDATION_SPLIT=0.2

# Security Configuration
NIDS_ENABLE_CORS=true
NIDS_RATE_LIMIT=100
NIDS_RATE_LIMIT_WINDOW=60
